                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                        Add school
                    </button>
                      
                      <!-- Modal -->
                      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="exampleModalLabel">Add school</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                            </div>
                            <form action="/user/admin/dashboard/school/new" method="post">
                                <script>
                                    function deleteSchool(code){
                                        fetch("/school/"+code, {
                                            method:"delete",
                                        }).then(()=>location.reload())
                                    }

                                    function submitSchool(){
                                        const errorDiv = document.getElementById("error");
                                        const name = document.getElementById("school-name")?.value
                                        const code = document.getElementById("school-code")?.value

                                        const submitSchool = fetch("/school", {
                                            method:"post",
                                            headers: {
            "Content-Type": "application/json", 
        },
                                            body:JSON.stringify({name, code}),
                                            
                                        }).then((res)=>res.json())
                                        .then((body)=>{
                                            if(body.status === "error"){
                                                errorDiv.hidden = false
                                                errorDiv.innerText = body.errors[0]
                                                return
                                            }
                                                location.reload()
                                            })

                                    }
                                </script>
                            <div class="modal-body">
                                    <div class="mb-3"><input required class="form-control" type="text" id="school-name" placeholder="Name"></div>
                                    <div class="mb-3"><input required class="form-control" type="text" id="school-code" placeholder="Code"></div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" 
                                        onclick="submitSchool()"
                                    class="btn btn-primary">Save changes</button>
                                </div>
                                <div style=" width: 100%; padding-inline:16px;">
                                    <div style="width: 100%" hidden id="error" class="alert alert-danger" role="alert">
                                      </div>
                                </div>
                            </div>
                        </form>
